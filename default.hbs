    {{! TarteAuCitron }}
    <script async type="text/javascript" src="https://cdn.lawgier.net/tarteaucitron/tarteaucitron.js"></script>
    <script type="text/javascript">
        tarteaucitron.init({
            "hashtag": "#tarteaucitron", /* Ouverture automatique du panel avec le hashtag */
            "highPrivacy": true, /* désactiver le consentement implicite (en naviguant) ? */
            "orientation": "bottom", /* le bandeau doit être en haut (top) ou en bas (bottom) ? */
            "adblocker": false, /* Afficher un message si un adblocker est détecté */
            "showAlertSmall": true, /* afficher le petit bandeau en bas à droite ? */
            "cookieslist": true, /* Afficher la liste des cookies installés ? */
            "removeCredit": false, /* supprimer le lien vers la source ? */
            "handleBrowserDNTRequest": true, /* Deny everything if DNT is on */
            "cookieDomain": ".lawgier.net" /* Nom de domaine sur lequel sera posé le cookie pour les sous-domaines */
        });
    </script>
    <script type="text/javascript">
        tarteaucitron.user.typekitId = 'ukh6vgy';
        (tarteaucitron.job = tarteaucitron.job || []).push('typekit');
        (tarteaucitron.job = tarteaucitron.job || []).push('youtube');
        (tarteaucitron.job = tarteaucitron.job || []).push('vimeo');
    </script>

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}}">
	<header class="main-header">
		<div class="main-header-content">
			<h1 class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
			<h2 class="blog-description">{{@blog.description}}</h2>
		</div>
		
		{{navigation}}
		
	</header>

    {{! Everything else gets inserted here }}
    {{{body}}}
    
    <footer class="site-footer">
    	<section class="rss"><a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/"></a></section>
		{{#if @blog.twitter}}<section class="twitter"><a class="icon-twitter" href="{{twitter_url}}"> {{@blog.twitter}}</a></section>{{/if}}
        <section class="copyright">&copy; 2014 - {{date format="YYYY"}} Paul-Henri LAUGIER</section>
        <section class="poweredby"><a href="http://thedarkroast.com/arabica">Arabica</a> theme by Sean Lunsford. Published with <a href="https://ghost.org">Ghost</a>.</section>
        <section><a href="https://lawgier.net/mentions-legales/">Mentions Légales</a></section>
    </footer>
    {{ghost_foot}}
  

    {{! Javascript code for the video embeeds}}
    <script type="text/javascript">
        $(document).ready(function() {
            $('.vimeoVideo').click(function() {
                var videoId = $(this).attr('id');
                var videoWidth = $(this).attr('id_width');
                var videoHeight = $(this).attr('id_height');
                $(this).replaceWith(embedVimeo(videoId, videoWidth, videoHeight));
            });
        });
        function embedVimeo(id, id_width, id_height) {
            //embedCode  = '<iframe webkitallowfullscreen mozallowfullscreen allowfullscreen ' + 'src="https://player.vimeo.com/video/' + id + '?color=ff9933&portrait=0" width="' + id_width + '" height="' + id_height + '" ></iframe>';
            embedCode  = '<div class="vimeo_player"' + 'videoID="' + id + '" width="' + id_width + '" height="' + id_height + '"></div>'
            return embedCode;
        }
        $(document).ready(function() {
            $('.ytVideo').click(function() {
                var videoId = $(this).attr('id');
                var videoWidth = $(this).attr('id_width');
                var videoHeight = $(this).attr('id_height');
                $(this).replaceWith(embedYT(videoId, videoWidth, videoHeight));
            });
        });
        function embedYT(id, id_width, id_height) {
            //embedCode  = '<iframe width="' + id_width + '" height="' + id_height + '" src="https://www.youtube.com/embed/' + id + '" frameborder="0" allowfullscreen></iframe>';
            embedCode  = '<div class="youtube_player" videoID="' + id + '" width="' + id_width + '" height="' + id_height + '" theme="theme (light)" rel="rel (1)" controls="controls (1)" showinfo="showinfo (1)" autoplay="autoplay (0)"></div>'
            return embedCode;
        }
    </script>
</body>
</html>